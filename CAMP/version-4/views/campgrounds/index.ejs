<% include ../partials/header %>

<div class="container down ">
  <header class="jumbotron">
    <h1>Camp Page</h1>
    <p>WorldWide Campgrounds</p>
    <p>
      <a href="/campgrounds/new"
        ><button type="button" class="btn btn-primary">
          Add New Campground
        </button>
      </a>
    </p>
  </header>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12"><h3>Most Popular Camps</h3></div>
  </div>
  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campground){ %>
    <div class="col-md-4 ">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="<%= campground.image %>" /> alt="Card
        image cap">
        <div class="card-body">
          <h5 class="card-title"><%= campground.name%></h5>

          <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary"
            >Read More</a
          >
        </div>
      </div>
    </div>

    <!--
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <h4><%= campground.name%></h4>
          <img src="<%= campground.image %>" />
        </div>
      </div>
    -->
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
