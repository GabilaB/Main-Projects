<% include ../partials/header %>

<div class="container down-show">
  <div>
    <h1 class="text-center">EDIT <%= campground.name%></h1>

    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input
          type="text"
          class="form-control"
          name="campground[name]"
          value="<%= campground.name%>"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Image</label>
        <input
          type="text"
          class="form-control"
          name="campground[image]"
          value="<%= campground.image%>"
        />
        <small id="emailHelp" class="form-text text-muted"
          >Please insert image url
        </small>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Title</label>
        <input
          type="text"
          class="form-control"
          name="campground[description]"
          value="<%= campground.description%>"
        />
      </div>
      <div class="text-center">
        <button type="submit" class="btn btn-primary ">Submit</button>
      </div>
    </form>

    <a href="/campgrounds">Back</a>
  </div>
</div>

