<% include ../partials/header %>

<div class="container down-show">
  <div class="text-center"><h1>Edit</h1></div>

  <form
    action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"
    method="POST"
  >
    <div class="form-group">
      <input
        type="text"
        class="form-control"
        name="comment[text]"
        value="<%= comment.text %>"
      />
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </form>

  <a href="/campgrounds">Back</a>
</div>

